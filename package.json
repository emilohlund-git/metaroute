{
  "name": "metaroute",
  "version": "1.0.0",
  "description": "A simple framework for building APIs in TypeScript, with a focus on simplicity and no dependencies.",
  "main": "dist/src/boot/application.boot.js",
  "scripts": {
    "start": "node dist/src/boot/application.boot.js",
    "build": "tsc",
    "dev": "set NODE_ENV=development && nodemon",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "framework",
    "typescript",
    "api"
  ],
  "author": "Emil Ã–lund",
  "license": "ISC",
  "dependencies": {
    "mysql2": "^3.9.1",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "jest": "^29.7.0",
    "jest-openapi": "^0.14.2",
    "nodemon": "^3.0.3",
    "openapi-enforcer": "^1.22.3",
    "openapi-types": "^12.1.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/boot/application.boot.ts",
    "ext": "ts, js"
  }
}
