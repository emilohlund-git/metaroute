{
  "name": "metaroute-ts",
  "version": "1.0.0",
  "description": "A simple framework for building APIs in TypeScript, with a focus on simplicity and no dependencies.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://metaroute.vercel.app/",
  "repository": {
    "url": "git+https://github.com/emilohlund-git/metaroute.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "prepare": "npm run build",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "framework",
    "typescript",
    "api"
  ],
  "author": "Emil Ã–lund",
  "license": "ISC",
  "dependencies": {
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "coveralls": "^3.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-openapi": "^0.14.2",
    "node-mocks-http": "^1.14.1",
    "nodemon": "^3.0.3",
    "openapi-enforcer": "^1.22.3",
    "openapi-types": "^12.1.3",
    "semantic-release": "^23.0.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/test.ts",
    "ext": "ts, js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
