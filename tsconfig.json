{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@api/*": ["./src/core/api/*"],
      "@auth/*": ["./src/core/auth/*"],
      "@code-first/*": ["./src/core/code-first/*"],
      "@common/*": ["./src/core/common/*"],
      "@database/*": ["./src/core/database/*"],
      "@email/*": ["./src/core/email/*"],
      "@memory/*": ["./src/core/memory/*"],
      "@validation/*": ["./src/core/validation/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*.ts"]
}
