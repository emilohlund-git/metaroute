{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "outDir": "dist",
    "target": "ES2021",
    "removeComments": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "noLib": false,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@metaroute/*": ["./src/core/*"],
      "@metaroute/api/*": ["./src/core/api/*"],
      "@metaroute/auth/*": ["./src/core/auth/*"],
      "@metaroute/code-first/*": ["./src/core/code-first/*"],
      "@metaroute/common/*": ["./src/core/common/*"],
      "@metaroute/database/*": ["./src/core/database/*"],
      "@metaroute/configuration/*": ["./src/core/configuration/*"],
      "@metaroute/email/*": ["./src/core/email/*"],
      "@metaroute/memory/*": ["./src/core/memory/*"],
      "@metaroute/validation/*": ["./src/core/validation/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*.ts"]
}
